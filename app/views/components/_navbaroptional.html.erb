<div class="navbar navbar-expand navbar-lewagon-white navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
      Rent A Woff
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "#", class: "nav-link" do %>
        <%= image_tag "map-round-white", class: "map-icon-size" %>
        <% end %>
      </li>
        <li class="nav-item dropdown">
        <%= image_tag "user-round-white", class: "dropdown-toggle user-icon-size", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My profile", "#", class: "dropdown-item" %>
          <% if current_user == nil %>
          <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
          <% else %>
          <%= link_to "Log Out",  destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
