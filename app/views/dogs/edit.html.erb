<div class="container-fluid dog-gif">
  <div class="container carousel-inner ">
    <div class="row justify-content-center align-items-center">
      <div class="col max">
        <h2>Update your doggy</h2>
        <%= simple_form_for @dog do |f| %>
        <%= f.input :name %>
        <%= f.input :age %>
        <%= f.input :race %>
        <%= f.input :bio %>
        <%= f.input :available_start_date, as: :date, html5: true %>
        <%= f.input :available_end_date, as: :date, html5: true %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit%>
        <% end %>
      </div>
    </div>
  </div>
</div>
